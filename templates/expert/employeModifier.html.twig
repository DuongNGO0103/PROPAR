{% extends 'base.html.twig' %}

{% block title %}Modification employés
{% endblock %}

{% block navbarlists %}
	<li class="listeLateral">
		<a href="{{ path('app_expert') }}">Tableau de bord</a>
	</li>
	<li class="listeLateral">
		<a href="{{ path('app_expert_operations') }}">Ajouter une opération</a>
	</li>
	<li class="listeLateral">
		<a href="{{ path('app_liste_operations') }}">Lister mes opérations</a>
	</li>
	<li class="listeLateral">
		<a href="{{ path('liste_employe') }}">Liste des employés</a>
	</li>
	<li class="listeLateral">
		<a href="{{ path('inscription') }}">Ajouter un employé</a>
	</li>
	<li class="listeLateral">
		<a href="{{ path('liste_employe_modifier') }}">Modifier un employé</a>
	</li>
	<li class="listeLateral">
		<a href="{{ path('app_prise_commande_expert') }}">Ajouter commande client</a>
	</li>
	<li class="listeLateral">
		<a href="{{ path('app_chiffre_affaire') }}">Chiffre d'affaire</a>
	</li>

{% endblock %}
{% block main2 %}
	<div class="cadreB">
		{% for message in app.flashes('success') %}
			<div class="alert alert-success">
				{{message}}
			</div>
		{% endfor %}
		<h3>Modifier un employé</h3>
		<div class="scroll" style="height:80%">
			<table class="table">
				<thead>
					<tr style="color:#3D6A9E">
						<th scope="col">ID</th>
						<th scope="col">NOM</th>
						<th scope="col">PRENOM</th>
						<th scope="col">EMAIL</th>
						<th scope="col">ROLE</th>
					</tr>
				</thead>
				<tbody>
					{% for employe in employe %}
						<tr>
							<th scope="row">{{ employe.id }}</th>
							<td>{{ employe.nom }}</td>
							<td>{{ employe.prenom }}</td>
							<td>{{ employe.email }}</td>
							<td>{{ employe.roles[0] }}</td>
							<td>
								<a href="{{path('expert_modifier',{'id': employe.id})}}" class="btn" style="background-color:#CBC6C5;height:38px;width:40px"><img src="{{asset('asset/img/editer.png')}}" style="height:20px;width:17px" alt="Modifier">
								</a>
							</td>
							<td>
								<form method="post" action="{{path('employe_delete',{'id': employe.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer?');">
									<input type="hidden" name="_method" value="delete">
									<input type="hidden" name="_token" value="{{csrf_token('SUP' ~ employe.id)}}">
									<input type="submit" class="btn btn-danger" style="height:38px;width:40px" value="X">
								</form>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
