	</li>

{% endblock %}

{% block main2 %}
	<div class="cadreB">
		<div class='cadreRegister'>
			{% for message in app.flashes('ajoutEmploye') %}
				<div class="alert alert-success">
					{{message}}
				</div>
			{% endfor %}
			<h3>Ajouter un employé</h3>
			<div class="scroll" style="height:80%">
				{{ form_start(registrationForm) }}
				{{ form_row(registrationForm.nom)}}
				{{ form_row(registrationForm.prenom)}}
				{{ form_row(registrationForm.email,{
            "attr":{"placeholder":"Saisir votre email"},

    })}}
				{{ form_row(registrationForm.password)}}
				{{ form_row(registrationForm.roles)}}
				{{ form_row(registrationForm.agreeTerms) }}
				<button type="submit" class="btn" style="background-color:#CBC6C5;color:#3D6A9E">Ajouter</button>
				{{ form_end(registrationForm) }}
			</div>
		</div>
	</div>

{% endblock %}
