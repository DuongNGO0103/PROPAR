	</li>
	<li class="listeLateral">
		<a href="{{ path('app_chiffre_affaire') }}">Chiffre d'affaire</a>
	</li>

{% endblock %}

{% block main2 %}
	<div class='cadreRegister'>
		{% for message in app.flashes('ajoutEmploye') %}
			<div class="alert alert-success">
				{{message}}
			</div>
		{% endfor %}
		<h3>Ajouter un employé</h3>
		{{ form_start(registrationForm) }}
		{{ form_row(registrationForm.nom)}}
		{{ form_row(registrationForm.prenom)}}
		{{ form_row(registrationForm.email,{
            "attr":{"placeholder":"Saisir votre email"},

    })}}
		{{ form_row(registrationForm.uuid,{
            "label":"Pseudo"
    })}}
		{{ form_row(registrationForm.password, {
            label: 'Password'
        })}}
		{{ form_row(registrationForm.roles)}}
		{{ form_row(registrationForm.agreeTerms) }}
		<button type="submit" class="btn btn-primary">Ajouter</button>
		{{ form_end(registrationForm) }}
	</div>

{% endblock %}
