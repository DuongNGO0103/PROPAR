{% extends 'base.html.twig' %}

{% block title %}Ajouter une opération
{% endblock %}

{% block navbarlists %}
	<ul>
		<a href="{{ path('app_apprenti') }}">Tableau de bord</a>
		<br/><br/>
		<a href="{{ path('app_apprenti_operations') }}">Ajouter une opération</a>
		<br/><br/>
		<a href="{{ path('app_liste_operations') }}">Lister mes opérations</a>
		<br/><br/>
	</ul>

{% endblock %}

{% block main2 %}
	{% for message in app.flashes('wrong') %}
		<div class="alert alert-danger">
			{{message}}
		</div>
	{% endfor %}
	<table>
		<h2>Liste des opérations en attente</h2>
		<thead>
			<tr>
				<th scope="col">Nom de commande</th>
				<th scope="col">Date</th>
				<th scope="col">statut</th>
				<th scope="col">Nom du client</th>
				<th scope="col">Type d' operation</th>
			</tr>
		</thead>
		<tbody>
			{% for commandes in commandeEnAttente %}
				<tr>
					<td>
						{{commandes.nomCommande}}
					</td>
					<td>
						{{ commandes.date|date("d/m/Y") }}</td>
					<td>
						{{commandes.statut}}
					</td>
					<td>
						{{commandes.client.nom}}
					</td>
					<td>
						{{commandes.operation.typeoperation}}
					</td>
					<td>
						<a href="{{ path('apprenti_operations',{'id': commandes.id})}}">Ajouter</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
