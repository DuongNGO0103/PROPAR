{% extends 'base.html.twig' %}

{% block title %}Tableau de bord
{% endblock %}


{% block navbarlists %}
	<li class='btn-hover color-1 mt-4'>
		<a href="{{ path('app_apprenti') }}">Tableau de bord</a>
	</li>
	<li class='btn-hover mt-4'>
		<a href="{{ path('app_apprenti_operations') }}">Ajouter une opération</a>
	</li>
	<li class='btn-hover mt-4'>
		<a href="{{ path('app_liste_operations_apprenti') }}">Liste mes opérations</a>
	</li>
	<li class='btn-hover mt-4'>
		<a href="{{ path('app_prise_commande_apprenti') }}">Ajouter commande client</a>
	</li>

{% endblock %}

{% block main2 %}
	<div class="cadreB">
		{% for message in app.flashes('success') %}
			<div class="alert alert-success">
				{{message}}
			</div>
		{% endfor %}
		<h3>Opérations en cours</h3>
		<div class="container text-center">
			<div class="row">
				<div class="col">
					<p class="titreCommande">ID</p>
				</div>
				<div class="col">
					<p class="titreCommande">COMMANDE</p>
				</div>
				<div class="col">
					<p class="titreCommande">DATE</p>
				</div>
				<div class="col">
					<p class="titreCommande">CLIENT</p>
				</div>
				<div class="col">
					<p class="titreCommande">OPERATION</p>
				</div>
				<div class="col"></div>
				<hr>
			</div>
			{% for commandes in commandeProfil %}
				<div class="cadreRow row">
					<div class="test col">
						{{commandes.id}}
					</div>
					<div class="test col">
						{{commandes.nomCommande}}
					</div>
					<div class="test col">
						{{ commandes.date|date("d/m/Y") }}
					</div>
					<div class="test col">
						{{commandes.client.nom}}
					</div>
					<div class="test col">
						{{commandes.operation.typeoperation}}
					</div>
					<div class="test col">
						<form method="post" action="{{path('apprenti_operations_terminer',{'id': commandes.id}) }}" onsubmit="return confirm('Voulez-vous vraiment terminer la commande ?');">
							<input type="hidden" name="_token" value="{{csrf_token('SUP' ~ commandes.id)}}">
							<input type="submit" class="btn" style="background-color:#CBC6C5; margin-bottom:6%;color:#3D6A9E " value="Terminer">
						</form>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
